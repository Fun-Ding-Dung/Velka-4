{
    "manifest_version": 3,
    "name": "Pragrest",
    "version": "1.0",
    "description": "Streamlined article pushing",
    "content_scripts": [
      {
        "js": ["scripts/content.js"],
        "matches": ["<all_urls>"],
        "css" : ["styles.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
        "default_icon": "pragrest.png"
    },

    "permissions": [
      "tabs",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
    "http://*/*",
    "https://*/*"
    ]
  }
  